#!/bin/sh -eu

cd "$(dirname "$0")/.."

nix run \
    --ignore-environment \
    --keep HOME \
    --keep LANG \
    --keep LOCALE_ARCHIVE \
    --file nix \
    pkgs.bash \
    pkgs.coreutils \
    pkgs.gnugrep \
    pkgs.nix-project-org2gfm \
    pkgs.tree \
    pkgs.ansifilter \
    --command \
    org2gfm \
    --ignore links.org \
    --nix "$(command -v nix)" \
    --evaluate \
    "$@"
