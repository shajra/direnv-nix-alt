#!/bin/sh -eu

cd "$(dirname "$0")/.."

nix run \
    --ignore-environment \
    --keep HOME \
    --keep LANG \
    --keep LOCALE_ARCHIVE \
    --file nix \
    nixpkgs-stable.bash \
    nixpkgs-stable.coreutils \
    nixpkgs-stable.gnugrep \
    nixpkgs-stable.nix-project-org2gfm \
    nixpkgs-stable.tree \
    nixpkgs-unstable.ansifilter \
    --command \
    org2gfm \
    --ignore links.org \
    --nix "$(command -v nix)" \
    --evaluate \
    "$@"
